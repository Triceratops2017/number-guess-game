/**index.wxss**/
.container {
  background: linear-gradient(135deg, #1a2a6c, #b21f1f, #1a2a6c);
  color: white;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.game-container {
  background: rgba(0, 0, 0, 0.7);
  border-radius: 40rpx;
  padding: 80rpx;
  width: 90%;
  max-width: 1200rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.title {
  font-size: 50rpx;
  margin-bottom: 40rpx;
  text-shadow: 0 0 20rpx rgba(255, 255, 255, 0.5);
  background: linear-gradient(to right, #ff7e5f, #feb47b);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-weight: bold;
}

.instructions {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  padding: 40rpx;
  margin: 50rpx 0;
  font-size: 28rpx;
  line-height: 1.6;
}

.instructions text {
  display: block;
  margin-bottom: 10rpx;
}

.guess-container {
  margin: 60rpx 0;
}

.guess-number {
  font-size: 120rpx;
  font-weight: bold;
  color: #ff7e5f;
  text-shadow: 0 0 40rpx rgba(255, 126, 95, 0.7);
  margin: 40rpx 0;
  transition: all 0.3s ease;
}

.status {
  font-size: 32rpx;
  margin: 40rpx 0;
  min-height: 60rpx;
}

.counter {
  font-size: 28rpx;
  margin-top: 40rpx;
  color: #feb47b;
}

.mic-container {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  margin: 60rpx auto;
}

.mic {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #ff7e5f, #feb47b);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 40rpx rgba(255, 126, 95, 0.5);
  transition: all 0.3s ease;
}

.mic.listening {
  background: linear-gradient(135deg, #00c9ff, #92fe9d);
}

.mic.finished {
  background: linear-gradient(135deg, #4cff00, #92fe9d);
}

.mic-icon {
  font-size: 60rpx;
  color: white;
}

.pulse {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255, 126, 95, 0.3);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 0.7;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.shaking {
  animation: shake 0.666s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-20rpx); }
  20%, 40%, 60%, 80% { transform: translateX(20rpx); }
}

.success-message {
  font-size: 40rpx;
  color: #4cff00;
  font-weight: bold;
  margin: 40rpx 0;
  text-shadow: 0 0 20rpx rgba(76, 255, 0, 0.7);
}

.hidden {
  display: none;
}

.footer {
  margin-top: 60rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.reset-btn {
  background: linear-gradient(135deg, #ff7e5f, #feb47b);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 126, 95, 0.3);
}